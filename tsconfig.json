{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": ["ES6"],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "typeRoots": [
            "./node_modules/@types",
            "src/@types"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@controllers/*": ["./src/controllers/*"],
            "@config/*": ["./src/config/*"],
            "@database/*": ["./src/database/*"],
            "@middlewares/*": ["./src/middlewares/*"],
            "@routes/*": ["./src/routes/*"],
            "@app": ["./src/app.ts"]
        }
    },
    "exclude": ["jest.config.ts", "babel.config.js", "dist"]
}
